                    <enumerationValue key="yes">Yes</enumerationValue>
                    <enumerationValue key="no">No</enumerationValue>
                </enumerationValues>
            </property>
            <property key="wordCount" type="enumeration" defaultValue="no">
                <caption>Word count</caption>
                <description/>
                <enumerationValues>
                    <enumerationValue key="yes">Yes</enumerationValue>
                    <enumerationValue key="no">No</enumerationValue>
                </enumerationValues>
            </property>
            <property key="maxChars" type="integer" defaultValue="0">
                <caption>Maximum characters</caption>
                <description/>
            </property>
            <property key="advancedContentFilter" type="enumeration" defaultValue="auto">
                <caption>Advanced content filter</caption>
                <description/>
                <enumerationValues>
                    <enumerationValue key="auto">Auto</enumerationValue>
                    <enumerationValue key="custom">Custom</enumerationValue>
                </enumerationValues>
            </property>
            <property key="allowedContent" type="string" required="false" multiline="true">
                <caption>Allowed content</caption>
                <description/>
            </property>
            <property key="disallowedContent" type="string" required="false" multiline="true">
                <caption>Disallowed content</caption>
                <description/>
            </property>

        </propertyGroup>
    </properties>
</widget>
