                    <enumerationValue key="breakLines">Break lines</enumerationValue>
                    <enumerationValue key="blocks">Blocks</enumerationValue>
                </enumerationValues>
            </property>
            <property key="autoParagraph" type="enumeration" defaultValue="yes">
                <caption>Auto paragraph</caption>
                <description/>
                <enumerationValues>
                    <enumerationValue key="yes">Yes</enumerationValue>
                    <enumerationValue key="no">No</enumerationValue>
                </enumerationValues>
